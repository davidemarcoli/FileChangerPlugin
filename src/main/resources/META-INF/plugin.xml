<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>dev.davidemarcoli.FileChangerPlugin</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
    <name>FileChangerPlugin</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor email="davide.marcoli13@gmail.com" url="https://davidemarcoli.dev">Davide Marcoli</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Simple HTML elements (text formatting, paragraphs, and lists) can be added inside of <![CDATA[ ]]> tag.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-description -->
    <description><![CDATA[
    This is a plugin that makes switching between files in a spring boot project easy.
  ]]></description>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <change-notes><![CDATA[
    <h2>Improvements</h2>
    <ul>
      <li>Add Icons to collapsed Tool Windows</li>
    </ul>
    <h2>Bug Fixes</h2>
    <ul>
      <li>Fixed bug that prevents files with a "." from being found</li>
    </ul>
]]></change-notes>

    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="View All Files" secondary="true" icon="MyIcons.listRight" anchor="right"
                    factoryClass="dev.davidemarcoli.filechangerplugin.allFiles.ViewAllFilesToolWindowFactory"/>
        <toolWindow id="View Associated Files" secondary="true" icon="MyIcons.fileIcon3" anchor="right"
                    factoryClass="dev.davidemarcoli.filechangerplugin.associatedFiles.ViewAssociatedFilesToolWindowFactory"/>
        <applicationService
                serviceImplementation="dev.davidemarcoli.filechangerplugin.associatedFiles.settings.AppSettingsState"/>
        <applicationConfigurable
                parentId="tools"
                instance="dev.davidemarcoli.filechangerplugin.associatedFiles.settings.AppSettingsConfigurable"
                id="org.intellij.sdk.settings.AppSettingsConfigurable"
                displayName="File Changer Plugin"/>
    </extensions>

    <applicationListeners>
        <listener
                class="dev.davidemarcoli.filechangerplugin.associatedFiles.FileChangeListener"
                topic="com.intellij.openapi.fileEditor.FileEditorManagerListener"/>
    </applicationListeners>
</idea-plugin>